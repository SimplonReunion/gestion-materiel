{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h1 class="text-center">Pcs list</h1>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Boitier</th>
                            <th>Alimentation</th>
                            <th>Hdd</th>
                            <th>Ssd</th>
                            <th>Graveur</th>
                            <th>Processeur</th>
                            <th>Cartemere</th>
                            <th>Memoire</th>
                            <th>Radiateur</th>
                            <th>Systemeexploitation</th>
                            <th>Prix</th>
                            <th>Statut</th>
                            <th>Cartegraphique</th>
                            <th>Ecran</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for pc in pcs %}

                            <tr>
                                <td>{{ pc.boitier }}</td>
                                <td>{{ pc.alimentation }}</td>
                                <td>{{ pc.hdd }}</td>
                                <td>{{ pc.ssd }}</td>
                                <td>{{ pc.graveur }}</td>
                                <td>{{ pc.processeur }}</td>
                                <td>{{ pc.carteMere }}</td>
                                <td>{{ pc.memoire }}</td>
                                <td>{{ pc.radiateur }}</td>
                                <td>{{ pc.systemeExploitation }}</td>
                                <td>{{ pc.prix }}</td>
                                <td>{{ pc.vendable }}</td>
                                <td>{{ pc.carteGraphique }}</td>
                                <td>{{ pc.ecran }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('pc_show', { 'id': pc.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('pc_edit', { 'id': pc.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('pc_new') }}">Create a new pc</a>
                    </li>
                </ul>



            </div>
        </div>
    </div>

{% endblock %}
